<div data-controller="contact">
  <div class="row">
    <div class="columns" id="add-back-arrow">
      <h2>Contact versions</h2>
    </div>
  </div>

  <div class="row row-th hide-for-small-only">
    <div class="medium-8 columns">Created</div>
    <div class="medium-4 columns text-right">Select version</div>
  </div>
  <% @contact_versions.each do |contact_version| %>
  <div id="versions" class="row odd-even">
    <div class="small-8 medium-8 columns">
      <%= link_to (l contact_version.created_at, format: :long), contact_version_path(contact_version) %>
    </div>
    <div class="small-4 medium-4 columns text-right">
      <img src="assets/difference.svg" class="icon large">
      <%= check_box_tag "version_ids[]", contact_version.id, false, id: contact_version.id,
        data: { action: "click->contact#versions" }, class: "checkBoxClass" %>
      <%= content_tag :span, contact_version.id %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="medium-10 columns"></div>
    <div class="medium-2 columns text-right">
      &nbsp;

      <%= button_to "Compare versions", contact_versions_compare_path, id: "compare_btn", class: "button disabled", disabled: true,
        params: { ids: "" }, data: { turbo: false }, method: :get %>

    </div>
  </div>

</div>
