<%= render "events/secondary_menu" unless @event.try(:org_id) %>
<%= render "events/restore_menu" if @event.try(:org_id) %>

<%= form_with model: @event do |form| %>

<div class="row">
  <div class="columns">
    <h2 class="th"><%= @event.title %></h2>
  </div>
</div>

<div class="row">
  <div class="columns tz-warning display-none">Created or edited in different timezone!</div>
  <div class="columns display-inline">
    <%= content_tag :label, @event.tz, class: "label-button tz-show display-none notice-color" %>
    <%= content_tag :label, l(@event.start, format: :mediumnotime), class: "label-button notice-color" if @event.allDay  %>
    <%= content_tag :label, l(@event.start, format: :medium), class: "label-button notice-color" unless @event.allDay %>
    <span class="sup">-</span>
    <%= content_tag :label, l(@event.end, format: :mediumnotime), class: "label-button notice-color" if @event.allDay %>
    <%= content_tag :label, l(@event.end, format: :medium), class: "label-button notice-color" unless @event.allDay %>
    <%= content_tag :label, "Allday", class: "label-button notice-color" if @event.allDay %>
  </div>
  <div class="columns tz-warning display-none">Browser timezone</div>
  <div class="columns tz-warning display-none">
    <%= content_tag :label, "", id: "tzBrowser", class: "label-button notice-color" %>
    <%= content_tag :label, "", id: "browserEventStart", class: "label-button notice-color" %>
    <span class="sup">-</span>
    <%= content_tag :label, "", id: "browserEventEnd", class: "label-button notice-color" %>
  </div>
</div>

<div class="row">
  <div class="columns">
    <%= content_tag :pre, @event.notes, id: "notes", class: "display-none" %>
    <div data-controller="event" id="markdown"></div>
  </div>
</div>

<div class="row">
  <div class="columns">
    <%= content_tag :div, '', id: "tagsContainer" if @event.tags.present? %>
    <%= form.hidden_field :tags %>
  </div>
</div>

<div class="row">
  <div class="columns"><label class="label-th"></label></div>
  <div class="columns small-6 medium-6 meta-data">Created: <%= l @event.created_at, format: :default %></div>
  <div class="columns small-6 medium-6 meta-data">Updated: <%= l @event.updated_at, format: :default %></div>
</div>
  <%= form.hidden_field :tz %>
  <%= form.hidden_field :start %>
  <%= form.hidden_field :end %>
<% end %>
