<div id="contacts" class="col-12" data-turbo-prefetch="false">
<% @contacts.each do |contact| %>
  <%= link_to contact_path(contact), class: "row p-2 even" do %>
  <div class="small-1 medium-1 column">
    <%= content_tag :div, '', class: "icon star-filled filter-orange icon-top-pos" if contact.starred == 1 %>
  </div>
  <div class="small-11 medium-5 column">
    <%= contact.name %>
  </div>
  <div class="medium-6 column hide-for-small-only">
    <%= JSON.parse(contact.companies).last['value'] unless contact.companies.include?("[]") %>
  </div>
  <% end %>
<% end %>
</div>

<%= content_tag :div, class: "row" do %>
  <div class="columns p-2">No contacts yet, create with the + icon.</div>
<% end unless @contacts.any? || action_name == "search" %>
