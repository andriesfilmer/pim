<div class="row mb-6">
  <div class="columns small-10 medium-10">
    <%= content_tag :div, '', class: "icon filter person md p-2 border-right-dashed cursor-pointer" unless @contact.id %>
    <%= link_to (content_tag :div, '', class: "icon filter person md p-2 border-right-dashed"),
      contact_path(@contact), title: "Back to contact without saving" if @contact.id %>

    <%= form_with model: @contact, id: "starredForm", class: "display-inline" do |form| %>
      <%= content_tag :div, '', class: "icon filter star#{"-filled" if @contact.starred?} md
      p-2 #{'filter-orange' if @contact.starred?} border-right-dashed  cursor-pointer",
        data: { controller: "contact", action: "click->contact#setStarred" } %>
      <%= hidden_field_tag :redirect , action_name %>
      <%= form.hidden_field :starred, { onchange: "this.form.requestSubmit()" } %>
    <% end if @contact.id %>

    <%= link_to (content_tag :div, '', class: "icon filter edit md p-2 border-right-dashed"),
      edit_contact_path(@contact), title: "Edit contact" if action_name == "show" %>

    <%= content_tag :div, '', id: "cloud-upload", data: { action: "click->contact#submitForm" },
       title: "Save contact", class:"icon filter cloud-upload md p-2 border-right-dashed cursor-pointer" if action_name != "show" %>

     <%= link_to (content_tag :div, '', class: "icon filter restore md p-2"),
       contact_versions_path(org_id: @contact.id), title: "Versions of this contact" if @contact.id %>

  </div>
  <div class="columns small-2 medium-2 text-right">
    <%= link_to (content_tag :div, '', class: "icon filter delete md p-2"), contact_path(@contact),
      data: {turbo_method: :delete, turbo_confirm: 'Are you sure to delete this contact?'}, title: "Delete item!" if @contact.id %>
  </div>
</div>
