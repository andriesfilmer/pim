<div class="row secondary-menu">
  <div class="columns small-6 medium-6">
    <span class="cursor-pointer ib-star<%= @contact.starred? ? '-filled' : '' %>"
      data-controller="contact" data-action="click->contact#setStarred"></span>
    <span class="divider"></span>
    <span data-controller="contact" data-action="click->contact#prepareParams",
      title="Save form!" class="ib-cloud-upload cursor-pointer"></span>
    <span class="divider"></span>
  </div>
  <div class="columns small-6 medium-6 text-right">
    <span class="divider"></span>
    <%= link_to "", contact_path(@contact, format: :html), data: {turbo_method: :delete},
      title: "Delete item!", class: "ib-trash" %>
  </div>
</div>

<%= render "form", contact: @contact %>

