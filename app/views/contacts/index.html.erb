<div class="row secondary-menu">
  <div class="columns small-12 medium-12 text-right">
    <span class="divider"></span>
    <%= link_to "", new_contact_path, data: { turbo_frame: dom_id(Contact.new) }, class: "ib-person-add" %>
  </div>
</div>

<div class="row">
  <div class="columns">
    <h1>Contacts</h1>

  <div data-controller="contact">
    <input data-contact-target="name" type="text">
    <button data-action="click->contact#greet">Greet</button>
    <span data-contact-target="output"></span>
  </div>

  <hr>

  <%= form_with url: search_contacts_path, method: :contact do |form| %>
    <%= form.search_field :contact_search, placeholder: 'Search contacts',
      value: params[:contact_search], oninput: "this.form.requestSubmit()" %>
  <% end %>

  <hr>

  </div>
</div>

<%= render "contacts" %>

