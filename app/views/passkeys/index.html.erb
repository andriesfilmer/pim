<div class="row mb-6">
  <div class="small-10 medium-10 columns">
    <div class="icon filter lock p-2 cursor-pointer border-right-dashed"></div>
    <%= link_to (content_tag :div, '', class: "icon filter share p-2 border-right-dashed"),
       passkey_shares_path, title: "Show passkey shares", date: { tooltip: ''} %>
    <div class="icon filter search p-2 cursor-pointer" data-controller="passkey" data-action="click->passkey#showSearch"></div>
  </div>
  <div class="small-2 medium-2 columns text-right">
    <%= link_to (content_tag :div, '', class: "icon filter add p-2"),
      new_passkey_path, data: { turbo_frame: dom_id(Passkey.new) } %>
  </div>
</div>

<div id="show_search" class="row display-none">
  <div class="columns">
  <%= form_with url: passkeys_search_path, id: "search-form" do |form| %>
    <%= form.search_field :search, placeholder: 'Search passkeys', value: cookies[:search],
      data: { controller: "passkey", action: "focus->passkey#search input->passkey#search" } %>
  <% end %>
  </div>
</div>

<div class="row color-bg-300 p-2">
  <div class="medium-1 columns hide-for-small-only">2FA</div>
  <div class="medium-6 columns">Keys</div>
  <div class="medium-2 columns hide-for-small-only">Shared by</div>
  <div class="medium-1 columns hide-for-small-only">Last read</div>
  <div class="medium-1 columns hide-for-small-only">Updated</div>
  <div class="medium-1 columns hide-for-small-only">Created</div>
</div>
<%= render "passkeys" %>
