<div class="row">
  <div class="columns">
    <h2>Change your password</h2>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "layouts/show_errors", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

<div class="row">
  <div class="columns">
    <%= f.label :password, "New password" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="columns">
    <%= f.label :password_confirmation, "Confirm new password" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div>
<div class="row">
  <div class="columns medium-6">
    <%= f.submit "Change my password", class: "button" %>
  </div>
<% end %>
  <div class="columns medium-6">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "button float-right" if resource.errors.any? %>
  </div>
</div>
