<div id="posts">
<% @posts.each do |post| %>
  <%= link_to post_path(post), class: "row p-2 even" do %>
  <div class="medium-6 columns">
    <%= post.title %>
  </div>
  <div class="medium-2 columns hide-for-small-only">
    <%= content_tag :label, (l post.last_read, format: "%Y-%m-%d"), class: "button tiny" %>
  </div>
  <div class="medium-2 columns hide-for-small-only">
    <%= content_tag :label, (l post.updated_at, format: "%Y-%m-%d") %>
  </div>
  <div class="medium-2 columns hide-for-small-only">
    <%= content_tag :label, (l post.created_at, format: "%Y-%m-%d") %>
  </div>
  <% end %>
<% end %>
</div>

<%= content_tag :div, class: "row" do %>
  <div class="columns p-2">No notes yet, create one with the + icon.</div>
<% end unless @posts.any? %>

