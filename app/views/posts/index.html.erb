<div class="row mb-6">
  <div class="small-10 medium-10 columns">
    <div class="icon article p-2 border-right-dashed"></div>
    <div class="icon search p-2 cursor-pointer" data-controller="post" data-action="click->post#showSearch" title="Search notes"></div>
  </div>
  <div class="small-2 medium-2 columns text-right">
    <%= link_to (content_tag :div, '', class: "icon add p-2"),
      new_post_path, data: { turbo_frame: dom_id(Post.new) }, title: "Add post" %>
  </div>
</div>

<div id="show_search" class="row display-none">
  <div class="columns">
  <%= form_with url: posts_search_path, id: "search-form" do |form| %>
    <%= form.search_field :search, id: 'search', placeholder: 'Search notes', value: cookies[:search],
      data: { controller: "post", action: "focus->post#search input->post#search" } %>
  <% end %>
  </div>
</div>

<div class="row p-2 color-bg-300">
  <div class="medium-6 columns">Notes</div>
  <div class="medium-2 columns hide-for-small-only ">Last read</div>
  <div class="medium-2 columns hide-for-small-only ">Updated</div>
  <div class="medium-2 columns hide-for-small-only ">Created</div>
</div>
<%= render "posts" %>
