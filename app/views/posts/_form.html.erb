<%= form_with model: @post, id: "postForm", class: "userinputs" do |form| %>
  <%= render "layouts/show_errors", resource: @post %>

  <div class="row">
    <div class="columns">
      <%= form.text_field :title, placeholder: "Note title" %>
    </div>
  </div>

  <!-- notes -->
  <div class="row">
    <div class="columns">
      <div class="icon markdown align-bottom" id="preview_bt" data-action="click->post#showMarkdown" data-tooltip title="Click for markdown preview"></div>
      <div class="icon edit align-bottom display-none" id="edit_bt" data-action="click->post#hideMarkdown" data-tooltip title="Click to edit"></div>
      <%= form.label :notes, class: "text-lg display-inline" %>
      <%= form.text_area :notes, placeholder: 'You can use markdown for notes', rows: '30' %>
      <div id="markdown"></div>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 columns">
    <fieldset>
      <legend class="strong">Category</legend>
      <div class="row p-4">
        <div class="column small-6 medium-6">Post</div>
        <div class="column small-6 medium-6 post">
        <%= form.label :category_post, class: "switch" do %>
          <%= form.radio_button :category, "post", class: "switch" %>
          <span class="slider round"></span>
        <% end %>
        </div>
      </div>
      <div class="row p-4">
        <div class="column small-6 medium-6">Hobby</div>
        <div class="column small-6 medium-6 hobby">
        <%= form.label :category_hobby, class: "switch" do %>
          <%= form.radio_button :category, "hobby", class: "switch" %>
          <span class="slider round"></span>
        <% end %>
        </div>
      </div>
      <div class="row p-4">
        <div class="column small-6 medium-6">Memo</div>
        <div class="column small-6 medium-6 memo">
        <%= form.label :category_memo, class: "switch" do %>
          <%= form.radio_button :category, "memo", class: "switch" %>
          <span class="slider round"></span>
        <% end %>
        </div>
      </div>
      <div class="row p-4">
        <div class="column small-6 medium-6">Task</div>
        <div class="column small-6 medium-6 task">
        <%= form.label :category_task, class: "switch" do %>
          <%= form.radio_button :category, "task", class: "switch" %>
          <span class="slider round"></span>
        <% end %>
        </div>
      </div>
      <div class="row p-4">
        <div class="column small-6 medium-6">Business</div>
        <div class="column small-6 medium-6 business">
        <%= form.label :category_business, class: "switch" do %>
          <%= form.radio_button :category, "business", class: "switch" %>
          <span class="slider round"></span>
        <% end %>
        </div>
      </div>
      <div class="row p-4">
        <div class="column small-6 medium-6">Holiday</div>
        <div class="column small-6 medium-6 holiday">
        <%= form.label :category_holiday, class: "switch" do %>
          <%= form.radio_button :category, "holiday", class: "switch" %>
          <span class="slider round"></span>
        <% end %>
        </div>
      </div>
    </fieldset>
    </div>

    <div class="columns medium-6">
    <fieldset>
      <p><legend class="strong">Tags</legend></p>
      <%= form.text_field :tags, placeholder: 'Comma separeted values' %>
      <div id="tagsContainer"></div>
    </fieldset>
    </div>
  </div>

<% end %>

<%= render "base/resource_footer", resource: @post %>

