<div data-controller="post">
  <div class="row">
    <div class="columns" id="add-back-arrow">
      <h2>Note versions</h2>
    </div>
  </div>

  <div class="row row-th hide-for-small-only">
    <div class="medium-8 columns">Created</div>
    <div class="medium-4 columns text-right">Select version</div>
  </div>
  <% @postversions.each do |postversion| %>
  <div id="versions" class="row odd-even">
    <div class="small-8 medium-8 columns">
      <%= link_to (l postversion.created_at, format: :long), postversion_path(postversion) %>
    </div>
    <div class="small-4 medium-4 columns text-right">
      <img src="assets/difference.svg" class="icon large">
      <%= check_box_tag "version_ids[]", postversion.id, false, id: postversion.id,
        data: { action: "click->post#versions" }, class: "checkBoxClass" %>
      <%= content_tag :span, postversion.id %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="medium-10 columns"></div>
    <div class="medium-2 columns text-right">
      &nbsp;

      <%= button_to "Compare versions", postversions_compare_path, id: "compare_btn", class: "button disabled", disabled: true,
        params: { ids: "" }, data: { turbo: false }, method: :get %>

    </div>
  </div>

</div>
