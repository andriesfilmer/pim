 div.column.small-2.text-right.secondary-menu
  a.fi-plus(ui-sref="calendar.event({start: 'new'})", title='New event')

div.row
 div#myCalendar.calendar.scale-fade(ui-calendar="uiConfig.calendar" ng-model="eventSources", 
