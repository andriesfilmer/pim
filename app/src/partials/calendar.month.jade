div.row(ng-hide="offline")
 div.column.small-10.text-left.secondary-menu
  | &nbsp;
  a(ng-click="changeView('month')", title='Month view')  M
  span.divider
  a(ng-click="changeView('basicWeek')", title='Week view') W
  span.divider
  a(ng-click="changeView('basicDay')", title='Day view') D
  span.divider
  a.fi-target-two(ng-click='gotoToday()', title='Today', tabindex="1")
  span.divider
