div.row(ng-hide="offline")
 div.column.small-8.text-left.secondary-menu
  | &nbsp;
  a.fi-star(ui-sref="contact.starred({starred: true})", title='Starred contacts', tabindex="1")
  span.divider
  a.fi-torsos(ui-sref="contact.list", title='All contacts', tabindex="2")
  span.divider
  a.fi-magnifying-glass(ng-click='toggleSearch(true)', title='Search', tabindex="3")
  span.divider
  a.fi-widget(href="", title="Settings", data-reveal-id="contact-settings", data-reveal-ajax="true") 
 div.column.small-4.text-right.secondary-menu
  span.divider
  a.fi-plus(href='#/contact/create',title='New item')

div.row.flip-in(ng-show="searchForm")
 form#search
  div.columns.small-10
   input#search-input.radius.search-box(focus-me="searchForm", type="text", placeholder="Enter search ...", ng-model="searchKey")
  div.columns.small-2
   button.tiny.reset-button(type="reset", ng-click="resetSearch()") &#215;

div.row
 ul.small-block-grid-3.medium-block-grid-4.large-block-grid-6.starred-list
  li.name(ng-repeat='contact in contacts')
   a(name="{{contact.birthdate | date: 'MM'}}")
   a(href='#/contact/{{contact._id}}')
    img.photo(ng-show="contact.photo == undefined || contact.photo == ''", ng-src="/static/images/profile.jpg")
    img.photo(ng-show="contact.photo != undefined", ng-src="{{contact.photo}}")
    p {{contact.name}}
    p.meta-data {{contact.birthdate | date: 'dd MMMM yyyy'}} ({{calculateAge(contact.birthdate) }})

include ./includes/contact.settings.jade
