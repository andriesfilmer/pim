div.row
  div.columns.small-12
   h2 Login page
  div.columns.small-12
   input(type="text", placeholder="Username", ng-model="user.username", tabindex="1")
  div.columns.small-12
   input(type="password", placeholder="Password", ng-model="user.password", tabindex="2")
  div.columns.small-6
   button.radius(type="submit", ng-click="signIn(user.username, user.password)", tabindex="3") Sign In
  div.columns.small-6.text-center
   button.radius.secondary.radius(type="submit", ui-sref="signup") Sign Up
