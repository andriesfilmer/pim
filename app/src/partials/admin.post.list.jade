div.row
 div.col-md-12.secondary-menu
  a.glyphicon.glyphicon-plus(href='#/admin/post/create')
div.row(ng-repeat='post in posts')
 div.col-md-6
  a(href='#/admin/post/edit/{{post._id}}') {{post.title}}
 div.col-md-2.hidden-xs.hidden-sm {{post.created | date:'short'}}
 div.col-md-2.hidden-xs.hidden-sm {{post.updated | date:'short'}}
 div.col-md-2
  button.btn.btn-warning.btn-xs(ng-show='post.is_published', ng-click='updatePublishState(post, false)')
   span.glyphicon.glyphicon-eye-close
  button.btn.btn-success.btn-xs(ng-show='!post.is_published', ng-click='updatePublishState(post, true)')
   span.glyphicon.glyphicon-eye-open
  button.btn.btn-danger.btn-xs(ng-click='deletePost(post._id)')
   span.glyphicon.glyphicon-trash

