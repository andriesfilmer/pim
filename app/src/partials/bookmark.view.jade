form(name="bookmarkForm")
 div.row(ng-hide="offline")
  div.column.small-8.text-left.secondary-menu
   i.fi-bookmark.reversed(title='Bookmarks')
   span.divider
   a.fi-page-edit(ng-hide="editForm", ng-click='toggleForm()', title='Edit item')
   a.fi-eye(ng-show="editForm", ng-click='toggleForm()', title='View item')
   span.divider
   a.fi-upload(ng-hide="bookmarkForm.title.$error.required", ng-class="{true: 'alert', false: ''}[saveForm]", ng-click='save(bookmark)', title='Save item')
  div.column.small-4.text-right.secondary-menu
   span.divider
   a.fi-trash(ng-click='deleteBookmark(bookmark)', title='Delete item', confirmation-needed="Really Delete?")
 
 div.row(ng-hide="editForm")
  div.column.small-12
  h1(ng-class='bookmark.category') {{bookmark.title}} 
  div.column.small-12
   a.fi-link(href="{{bookmark.url}}")  {{bookmark.url}} 
  div.column.small-12
   p(markdown='bookmark.content') 

 div.row(ng-show="editForm")
  div.column.small-12(ng-class="bookmark.category")
   input#title-input(type="text", required='', name="title", placeholder="Title is required", ng-model="bookmark.title", ng-change="isChanged()")
 div.row(ng-show="editForm")
  div.column.small-12
   input(type="text", placeholder="http://.....", ng-model="bookmark.url", ng-change="isChanged()")
 div.row(ng-show="editForm")
  div.column.small-12
   textarea#bookmark-content(rows="10", ng-model="bookmark.content", ng-change="isChanged()", placeholder="You can use Markdown ...")
   input#inputTags(type="text", placeholder="Tag #1, TagÂ #2, ...", my-tags='', ng-model="bookmark.tags", ng-change="isChanged()")
 div.row
  div.column.small-12
   ul.inline-list
    li.tag(ng-repeat='tag in bookmark.tags')
     a.label.radius.success(href='#/tag/{{tag}}') {{tag}}
 div.row
  fieldset.radius
   legend Category
   div.row
    div.column.small-6.my-row.media Media
    div.switch.round.column.small-6.bookmark-media
     input#bookmark-media.media(type="radio", value="media", name="bookmarkCategory", ng-model="bookmark.category", ng-change="isChanged()")
     label(for="bookmark-media")
   div.row
    div.column.small-6.my-row.fun Fun
    div.switch.round.column.small-6.bookmark-fun
     input#bookmark-fun(type="radio", value="fun", name="bookmarkCategory", ng-model="bookmark.category", ng-change="isChanged()")
     label(for="bookmark-fun")
   div.row
    div.column.small-6.my-row.kb Knowlege base
    div.switch.round.column.small-6.bookmark-kb
     input#bookmark-kb(type="radio", value="kb", name="bookmarkCategory", ng-model="bookmark.category", ng-change="isChanged()")
     label(for="bookmark-kb") 
   div.row
    div.column.small-6.my-row.other Other
    div.switch.round.column.small-6.bookmark-other
     input#bookmark-other(type="radio", value="other", name="bookmarkCategory", ng-model="bookmark.category", ng-change="isChanged()")
     label(for="bookmark-other") 
  fieldset.radius
   div.row
    div.column.small-6 Public switch
    div.switch.round.column.small-6.bookmark-public
     input#public(type="checkbox", ng-model="bookmark.public", ng-change="isChanged()")
     label(for="public")
 div.row
  div.column.small-6.date-meta.panel
   i Created:  {{bookmark.created | date: 'yyyy-MM-dd HH:mm'}}
  div.column.small-6.date-meta.panel
   i Updated:  {{bookmark.updated | date: 'yyyy-MM-dd HH:mm'}}
