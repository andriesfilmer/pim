div.row(ng-hide="offline")
 div.column.small-8.text-left.secondary-menu
  i.fi-page.reversed(title='Posts')
  span.divider
  a.fi-magnifying-glass(ng-click='toggleSearch()', title='Search', tabindex="1")
  span.divider
  a.fi-widget(href="", title="Settings", data-reveal-id="post-settings", data-reveal-ajax="true") 
 div.column.small-4.text-right.secondary-menu
  span.divider
  a.fi-plus(href='#/post/create',title='New item')

div.row.flip-in(ng-show="searchForm")
 form#search
  div.columns.small-10
   input.radius.search-box(name="focus", type="text", placeholder="Enter search words...", ng-model="searchKey", tabindex="2" )
  div.columns.small-2
   button.tiny.reset-button(type="reset", ng-click="resetSearch()") &#215;


div.row.my-row.toggle(ng-repeat='post in posts', ng-class="post.type ? post.type : 'my-row'")
 a(href='#/post/{{post._id}}')
  div.columns.medium-8 {{post.title}}
 div.column.medium-2.hide-for-small
  div.round.secondary.label {{post.updated | date: 'yyyy-MM-dd'}}
 div.column.medium-2.hide-for-small
  div.round.alert.label(ng-show='post.public', ng-click='updatePublicState(post, false)') public
  div.round.secondary.label(ng-show='!post.public', ng-click='updatePublicState(post, true)') private

div.row
 div#post-settings.reveal-modal(data-reveal='')
  a.close-reveal-modal &#215;
  h2 General post settings
  fieldset
   div.row
    div.column.small-6.my-row List 20 posts
    div.switch.round.column.small-6
     input#post-20(type="radio", value="20", name="postLimit", ng-model="postLimit", ng-change="changeLimit(20)")
     label(for="post-20")
   div.row
    div.column.small-6.my-row List 50 posts
    div.switch.round.column.small-6
     input#post-50(type="radio", value="50", name="postLimit", ng-model="postLimit", ng-change="changeLimit(50)")
     label(for="post-50") 
   div.row
    div.column.small-6.my-row List 100 posts
    div.switch.round.column.small-6
     input#post-100(type="radio", value="100", name="postLimit", ng-model="postLimit", ng-change="changeLimit(100)")
     label(for="post-100") 
   div.row
    div.column.small-6.my-row List 1000 posts
    div.switch.round.column.small-6
     input#post-1000(type="radio", value="1000", name="postLimit", ng-model="postLimit", ng-change="changeLimit(1000)")
     label(for="post-1000")
  fieldset
   div.row
    div.column.small-12 &nbsp;
   div.row
    div.column.small-6
     button.radius(ng-click='saveSettings()', title='Save settings') Save
    div.column.small-6
     span.post-meta Settings wil be reset on logout

