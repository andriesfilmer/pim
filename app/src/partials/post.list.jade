div.row(ng-hide="offline")
 div.column.small-12.secondary-menu
  i.fi-page.reversed(title='Posts')
  span.divider
  a.fi-magnifying-glass(ng-click='toggleSearch()', title='Search', tabindex="1")
  span.divider
  a.fi-widget(title="Settings", data-open="post-settings") 
  span.float-right
   span.divider
   a.fi-plus(ui-sref='post.create',title='New item')

div.row.flip-in(ng-show="searchForm")
 form#search
  div.columns.small-10
   input#search-input.search-box(focus-me="searchForm", type="text", placeholder="Post search ...", ng-model="searchKey")
  div.columns.small-2
   button.tiny.reset-button(type="reset", ng-click="resetSearch()") &#215;

div.row.my-row(ng-repeat='post in posts', ng-class="post.type", ng-class-odd="'odd'" ng-class-even="'even'")
 a(ui-sref="post.view({id: post._id})")
   div.columns.medium-10 {{post.title}}
  div.column.medium-2.hide-for-small-only
   div.secondary.label {{post.created | date: 'yyyy-MM-dd'}}
div.columns.meta-data(ng-if="!posts") No posts, todos, notes or articles yet

div.row
 div#post-settings.reveal.full(data-reveal='')
  button.close-button(data-close='', type="button")
   span(aria-hidden="true") &times;
  h2 General post settings
  fieldset
   legend Limit posts per request
   div.row
    div.column.small-6 List 20
     span.meta-data  fast
    div.switch.column.small-6
     input#post-20.switch-input(type="radio", value="20", name="postLimit", ng-model="postLimit", ng-change="changeLimit(20)")
     label.switch-paddle(for="post-20")
   div.row
    div.column.small-6 List 50
    div.switch.column.small-6
     input#post-50.switch-input(type="radio", value="50", name="postLimit", ng-model="postLimit", ng-change="changeLimit(50)")
     label.switch-paddle(for="post-50") 
   div.row
    div.column.small-6 List 100
    div.switch.column.small-6
     input#post-100.switch-input(type="radio", value="100", name="postLimit", ng-model="postLimit", ng-change="changeLimit(100)")
     label.switch-paddle(for="post-100") 
   div.row
    div.column.small-6 List 1000
     span.meta-data  slow
    div.switch.column.small-6
     input#post-1000.switch-input(type="radio", value="1000", name="postLimit", ng-model="postLimit", ng-change="changeLimit(1000)")
     label.switch-paddle(for="post-1000")
   div.row
    div.column.small-12
     span.meta-data
      i  * Settings only for this device.
