div.row
 div.colums.small-12.secondary-menu
  a.fi-plus(href='#/post/create',title='New item')
div.row.my-row(ng-repeat='post in posts', ng-class="post.type")
 a(href='#/post/{{post._id}}')
  div.columns.medium-8 {{post.title}}
 div.column.medium-2.hide-for-small
  div.round.secondary.label {{post.updated | date:'short'}}
 div.column.medium-2.hide-for-small
  div.round.alert.label(ng-show='post.is_published', ng-click='updatePublicState(post, false)') public
  div.round.secondary.label(ng-show='!post.is_published', ng-click='updatePublicState(post, true)') private
